<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/ghostWhiteColor">

    <SeekBar
        android:id="@+id/period_seeker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/period_selector"
        android:layout_alignStart="@+id/period_selector"
        android:layout_marginTop="8dp"
        android:layout_alignEnd="@+id/period_selector"
        android:progress="15"
        android:elevation="4dp"
        android:layout_marginBottom="8dp"/>

    <include
        android:id="@+id/period_selector"
        layout="@layout/radio_3_way"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/history_period_label"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25 December 2016   to   25 December 2016"
        android:id="@+id/history_period_label"
        android:textColor="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"/>


</RelativeLayout>
